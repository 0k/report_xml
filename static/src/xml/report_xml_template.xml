<?xml version="1.0" encoding="UTF-8"?>
<!-- vim:fdl=1:
-->
<templates id="template" xml:space="preserve">

  <t t-name="FieldReportXMLTemplate">

    <div t-att-class="widget.widget_class">

      <textarea rows="6"
                t-if="widget.get('effective_readonly')"
                t-att-name="widget.name"
                class="field_text report_xml_read_only"
                readonly="true"
                t-att-tabindex="widget.node.attrs.tabindex"
                t-att-autofocus="widget.node.attrs.autofocus"
                placeholder=""
                t-att-maxlength="widget.field.size"
                ></textarea>

      <t t-if="!widget.get('effective_readonly')">
        <div class="oe_edit_only">
          <div class="report_xml_select_objects">
            <h4 class='select_preview_title open'>Select Preview Objects</h4>
            <div class="report_xml_select_objects_area" />
          </div>
        </div>

        <div class="oe_report_xml_split oe_form_field_report_xml"
             t-att-style="widget.node.attrs.style">

          <div class="report_xml_edit ace_editor" />

          <div class="oe_preview_pane oe_edit_only">
            <div class="oe_form_field_preview" />
            <div class="no_preview_message" />
          </div>
        </div>
      </t>

    </div>
  </t>

  <t t-name="ReportError">
    <table cellspacing="0" cellpadding="0" border="0" class="oe_dialog_warning">
      <tr>
        <td class="oe_dialog_icon"><img t-att-src='_s + "/web/static/src/img/warning.png"'/></td>
        <td>
          <t t-js="d">
            var message = d.message ? d.message : d.error.data.message;
            var debug = d.error.data.debug ? d.error.data.debug : "";
            d.html_error = context.engine.tools.html_escape($.trim(message));
            d.html_debug = context.engine.tools.html_escape($.trim(debug));
          </t>
          <pre><t t-raw="html_error"/></pre>
          <t t-if="html_debug">
            <h3>Debug Information</h3>
            <pre><t t-raw="html_debug"/></pre>
          </t>
        </td>
      </tr>
    </table>
  </t>

  <t t-name="ReportBox">
    <div class='check' t-attf-id='check-#{id}'>
      <button type='button' class='btn btn-default btn-lg get-report'>
        <span class='glyphicon glyphicon-download'></span>
      </button>
      <div class='indicator'></div>
      <div class='message'></div>
      <h3><t t-esc='title' /></h3>
      <div class='content' style='display: none;'></div>
    </div>
  </t>

  <t t-name="ReportDisplayResult">
    <div class='report-display-result'>
      <div t-if='message || more' class='message-box'>
        <span class='message'><t t-esc='message' /></span>
        <div t-if="more" class='more'><t t-esc='more' /></div>
      </div>
      <t t-if="results.length !== 0">
        <ul class="nav nav-tabs" role="tablist">
          <t t-foreach='results' t-as='result'>
            <li t-att-class="result_index === highlight_index ? 'active' : ''"
                t-att-data-index="result_index">
              <a>
                <span class="glyphicon glyphicon-ok-sign"></span>
                 <t t-esc='result.title' />
              </a>
            </li>
          </t>
        </ul>
        <t t-foreach='results' t-as='result'>
          <div t-attf-class="tab-content tab-index-#{result_index}">
            <pre t-attf-class='code sunlight-highlight-#{result.type}'
                 t-att-data-index='result_index'
                 ><t t-esc="'\n' + result.content" /></pre>
          </div>
        </t>
      </t>
    </div>
  </t>

</templates>
